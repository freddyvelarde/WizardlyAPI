// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        Int      @id @default(autoincrement())
  username  String
  email     String
  password  String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  environments Environment[]
}

model Collection {
  id          Int        @id @default(autoincrement())
  name        String
  description String?
  request     Request    @relation(fields: [request_id], references: [id])
  request_id  Int
  created_at  DateTime
  updated_at  DateTime
  environments Environment[]
}

model Request {
  id           Int         @id @default(autoincrement())
  name         String
  description  String?
  method       String
  url          String
  headers      String?
  body         String?
  created_at   DateTime
  updated_at   DateTime
  collections  Collection[]
  histories    History[]
}

model Environment {
  id           Int        @id @default(autoincrement())
  name         String
  variable     String
  collection   Collection @relation(fields: [collection_id], references: [id])
  collection_id Int
  owner        Users     @relation(fields: [owner_id], references: [id])
  owner_id     Int
  created_at   DateTime
  updated_at   DateTime
  histories    History[]
}

model History {
  id              Int       @id @default(autoincrement())
  request         Request   @relation(fields: [request_id], references: [id])
  request_id      Int
  response_code   Int
  response_headers Json?
  response_body   Json?
  created_at      DateTime
  environments    Environment[]

  @@index([request_id])
}
